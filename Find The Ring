#include<iostream>
using namespace std;
int main()
{
int t,index,n;
cin>>t;
while(t--)
{
cin>>index>>n;
if(index==n)
{
cout<<"0"<<endl;
}
else if(index==0)
{
if(n%2==0)
{
cout<<"0"<<endl;
}
else
{
cout<<"1"<<endl;
}
}
else if(index==1)
{
if(n%2==0)
{
cout<<"1"<<endl;
}
else
{
cout<<"0"<<endl;
}
}
else if(index==2)
{
if(n==0)
{
	cout<<"2"<<endl;
}
else if(n%2==0)
{
cout<<"0"<<endl;
}
else
{
cout<<"1"<<endl;
}
}
}
return 0;
}
 
