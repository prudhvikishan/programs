#include<iostream>
using namespace std;
int main()
{
   long long t,n,i;
   char a[100000];
   int val[100000];
   cin>>t;
   while(t--)
   {
              cin>>n;
              cin>>a;
              for(i=0;i<n;i++)
              {
              	cin>>val[i];
              	}
              for(i=0;i<n;i++)
              swap(a[i],a[val[i]-1]);
              cout<<a<<endl;
              }
              return 0;
	}
